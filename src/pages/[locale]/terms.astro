---
export const prerender = true;

import Layout from "../../shared/Layout.astro";
import { locales, getLocaleFromUrl, useTranslations } from "../../i18n";

export function getStaticPaths() {
  return locales.map(locale => ({ params: { locale } }));
}

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const localePath = (path: string) => `/${locale}${path}`;
---

<Layout title={t.terms.title} locale={locale}>
  <section class="container section" style="max-width: 800px; padding-top: 60px;">
    <h1 style="font-size: 3rem; font-weight: 800; letter-spacing: -1px; margin-bottom: 40px; text-align: center;">{t.terms.title}</h1>
    
    <div class="card" style="padding: 40px;">
        <div class="prose">
            <p class="lead">{t.terms.lastUpdated}: {new Date().toLocaleDateString(locale)}</p>
            
            <h3>{t.terms.intro.title}</h3>
            <p>{t.terms.intro.content}</p>
            
            <h3>{t.terms.use.title}</h3>
            <p>{t.terms.use.content}</p>
            
            <h3>{t.terms.accounts.title}</h3>
            <p>{t.terms.accounts.content}</p>
            
            <h3>{t.terms.subs.title}</h3>
            <p>{t.terms.subs.content}</p>
            
            <h3>{t.terms.term.title}</h3>
            <p>{t.terms.term.content}</p>
            
            <h3>{t.terms.liability.title}</h3>
            <p>{t.terms.liability.content}</p>
        </div>
    </div>
  </section>

  <style>
    .prose h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: var(--color-text);
    }
    .prose p {
        color: var(--color-text-muted);
        line-height: 1.7;
        margin-bottom: 1rem;
    }
    .lead {
        font-size: 1.1rem;
        color: var(--color-text-muted);
        margin-bottom: 2rem;
    }
  </style>
</Layout>
