---
export const prerender = true;

import Layout from "../../shared/Layout.astro";
import { locales, getLocaleFromUrl, useTranslations } from "../../i18n";

export function getStaticPaths() {
  return locales.map(locale => ({ params: { locale } }));
}

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const localePath = (path: string) => `/${locale}${path}`;
---

<Layout title="Documentation" locale={locale}>
  <section class="container section" style="padding-top: 60px;">
    <div style="text-align: center; margin-bottom: 60px;">
        <span class="badge" style="margin-bottom: 16px;">{t.docs.badge}</span>
        <h1 style="font-size: clamp(40px, 5vw, 64px); font-weight: 800; opacity: 1; letter-spacing: -1px; margin-bottom: 24px;">
          {t.docs.heroTitle1} <span class="text-gradient">{t.docs.heroTitle2}</span>
        </h1>
        <p class="lead" style="max-width: 600px; margin: 0 auto;">
          {t.docs.lead}
        </p>
    </div>

    <!-- Quick Links Grid -->
    <div class="grid grid-3" style="margin-bottom: 80px;">
        <a href={localePath('/extension')} class="card docs-card">
            <div class="icon-box">ðŸš€</div>
            <h3>{t.docs.quickLinks.start.title}</h3>
            <p class="muted">{t.docs.quickLinks.start.description}</p>
        </a>
        <a href={localePath('/extension')} class="card docs-card">
            <div class="icon-box">ðŸ§©</div>
            <h3>{t.docs.quickLinks.extension.title}</h3>
            <p class="muted">{t.docs.quickLinks.extension.description}</p>
        </a>
        <a href={localePath('/pricing')} class="card docs-card">
            <div class="icon-box">ðŸ’³</div>
            <h3>{t.docs.quickLinks.billing.title}</h3>
            <p class="muted">{t.docs.quickLinks.billing.description}</p>
        </a>
    </div>

    <!-- FAQ Section -->
    <div style="max-width: 800px; margin: 0 auto;">
        <h2 style="font-size: 32px; font-weight: 800; margin-bottom: 40px; text-align: center;">{t.docs.faq.title}</h2>
        
        <div class="faq-item">
            <h4>{t.docs.faq.q1.title}</h4>
            <p class="muted">{t.docs.faq.q1.content}</p>
        </div>

        <div class="faq-item">
            <h4>{t.docs.faq.q2.title}</h4>
            <p class="muted">{t.docs.faq.q2.content}</p>
        </div>

        <div class="faq-item">
            <h4>{t.docs.faq.q3.title}</h4>
            <p class="muted">{t.docs.faq.q3.content}</p>
        </div>

        <div class="faq-item">
            <h4>{t.docs.faq.q4.title}</h4>
            <p class="muted">{t.docs.faq.q4.content}</p>
        </div>
    </div>
    
    <div style="margin-top: 80px; padding: 40px; background: var(--color-bg-subtle); border-radius: 20px; text-align: center; border: 1px solid var(--color-border);">
        <h3 style="font-size: 24px; font-weight: 700; margin-bottom: 16px;">{t.docs.support.title}</h3>
        <p class="muted" style="margin-bottom: 24px;">{t.docs.support.description}</p>
        <a href="mailto:support@fastscout.app" class="btn btn-primary">{t.docs.support.cta}</a>
    </div>

  </section>

  <style>
    .docs-card {
        text-decoration: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: block;
    }
    .docs-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.1);
    }
    .icon-box {
        width: 48px;
        height: 48px;
        background: #F1F5F9;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        margin-bottom: 20px;
    }
    .docs-card h3 {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 8px;
        color: var(--color-text);
    }
    .faq-item {
        background: white;
        border: 1px solid var(--color-border);
        padding: 24px;
        border-radius: 16px;
        margin-bottom: 16px;
    }
    .faq-item h4 {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 8px;
    }
    .faq-item p {
        margin: 0;
        line-height: 1.6;
    }
  </style>
</Layout>
