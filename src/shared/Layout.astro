---
import { ViewTransitions } from 'astro:transitions';
import Toast from "../components/Toast.astro";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import { type Locale, defaultLocale, useTranslations, getLocaleFromUrl } from "../i18n";

interface Props {
  title?: string;
  locale?: Locale;
}

const { title = "FastScout" } = Astro.props;

// Get locale from URL or props
const locale = Astro.props.locale ?? getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const pathname = Astro.url.pathname;
const pathWithoutLocale = pathname.replace(/^\/(fr|en|nl)/, '') || '/';

// Helper to get localized path
const localePath = (path: string) => `/${locale}${path === '/' ? '' : path}`;
---
<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <ViewTransitions />
    <style is:inline>
      :root {
        color-scheme: light;
        /* Core Colors - Premium Light (Linear) */
        --color-bg: #FFFFFF;
        --color-bg-subtle: #F8FAFC; /* Slate 50 */
        --color-bg-card: #FFFFFF;
        --color-bg-card-hover: #FFFFFF;
        
        --color-text: #0F172A; /* Slate 900 */
        --color-text-muted: #64748B; /* Slate 500 */
        --color-text-dim: #94A3B8; /* Slate 400 */

        /* Brand Gradients */
        --gradient-primary: linear-gradient(135deg, #2563EB 0%, #7C3AED 100%); /* Blue to Violet */
        --gradient-success: linear-gradient(135deg, #10B981 0%, #3B82F6 100%);
        --gradient-glow: radial-gradient(circle at center, rgba(37, 99, 235, 0.08) 0%, transparent 70%);

        /* Accents */
        --color-primary: #2563EB;
        --color-primary-glow: rgba(37, 99, 235, 0.2);
        --color-border: #E2E8F0; /* Slate 200 */
        --color-border-hover: #CBD5E1; /* Slate 300 */
        --color-success: #10B981;

        /* UI Tokens */
        --radius: 12px;
        --glass-blur: 8px;
        
        /* Shadows - "Float" System */
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -4px rgba(0, 0, 0, 0.02);
        --shadow-float: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 10px 10px -5px rgba(0, 0, 0, 0.02);
        --shadow-glow: 0 0 20px rgba(37, 99, 235, 0.1);

        /* Spacing */
        --space-1: 8px;
        --space-2: 12px;
        --space-3: 16px;
        --space-4: 24px;
        --space-5: 32px;
        --space-6: 64px;
      }

      /* Global Reset & Base */
      * { box-sizing: border-box; }
      html, body { height: 100%; overflow-x: hidden; }

      body {
        font-family: 'Outfit', sans-serif;
        margin: 0;
        background-color: var(--color-bg-subtle);
        color: var(--color-text);
        background-image: 
          radial-gradient(circle at 50% 0%, white 0%, transparent 70%);
        background-attachment: fixed;
      }

      a { color: inherit; text-decoration: none; transition: 0.2s; }

      /* Animations */
      @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .animate-enter { animation: fadeIn 0.6s ease-out forwards; }
      .stagger-1 { animation-delay: 0.1s; }
      .stagger-2 { animation-delay: 0.2s; }
      .stagger-3 { animation-delay: 0.3s; }

      /* Components */
      /* Components */
      /* Components */
      header {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 100;
        width: 90%;
        max-width: 1000px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 24px;
        background: rgba(255, 255, 255, 0.85); /* Clean white glass */
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid var(--color-border);
        border-radius: 100px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
      }

      .logo {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 700;
        font-size: 20px;
        color: var(--color-text);
        letter-spacing: -0.5px;
      }

      nav { display: flex; align-items: center; gap: 8px; }
      nav a {
        font-size: 14px;
        font-weight: 500;
        color: var(--color-text-muted);
        padding: 8px 16px;
        border-radius: 100px;
        transition: all 0.2s ease;
      }
      nav a:hover { 
        color: var(--color-text); 
        background: #F1F5F9; /* Slate 100 */
      }
      nav a[aria-current="page"] {
        color: var(--color-primary);
        background: rgba(37, 99, 235, 0.06); 
      }

      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 24px;
        border-radius: 100px;
        font-weight: 500;
        font-size: 14px;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid transparent;
        cursor: pointer;
        letter-spacing: 0.2px;
      }

      .btn-primary {
        background: var(--gradient-primary);
        color: white;
        box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.2);
        border: 1px solid rgba(255,255,255,0.1);
      }
      .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.3);
      }

      .btn-outline {
        background: white;
        border: 1px solid var(--color-border);
        color: var(--color-text);
      }
      .btn-outline:hover {
        border-color: var(--color-border-hover);
        background: #F8FAFC;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--space-4);
      }

      .section { padding: 120px 0 80px; }

      .card {
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        padding: var(--space-5);
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
      .card:hover {
        background: var(--color-bg-card-hover);
        box-shadow: var(--shadow-float);
        border-color: var(--color-border-hover);
        transform: translateY(-4px);
      }
      
      /* Subtle Top Highlight for Cards - Removed for Clean Light Mode */
      .card::before {
        display: none;
      }

      .grid { display: grid; gap: var(--space-4); }
      .grid-2 { grid-template-columns: repeat(2, 1fr); }
      .grid-3 { grid-template-columns: repeat(3, 1fr); }

      /* Utilities */
      .badge {
        display: inline-flex;
        align-items: center;
        padding: 4px 12px;
        border-radius: 100px;
        background: rgba(37, 99, 235, 0.1);
        color: var(--color-primary);
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: 1px solid rgba(37, 99, 235, 0.15);
      }

      .status-dot {
        display: inline-block;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--color-success);
        margin-right: 8px;
        box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.1);
      }
      .status-dot.inactive { background: var(--color-text-dim); box-shadow: none; }

      .feature-list {
        list-style: none;
        padding: 0;
        margin: 24px 0;
      }
      .feature-list li {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 12px;
        color: var(--color-text);
        font-size: 14px;
        font-weight: 400;
      }
      .feature-list li::before {
        content: "âœ“";
        display: flex;
        align-items: center;
        justify-content: center;
        width: 18px;
        height: 18px;
        background: rgba(37, 99, 235, 0.1); /* Blue tint CHECK */
        color: var(--color-primary);
        border-radius: 50%;
        font-size: 10px;
        font-weight: bold;
      }

      .muted { color: var(--color-text-muted); }

      .footer-link {
        color: var(--color-text-muted);
        font-size: 14px;
        transition: color 0.15s ease;
      }
      .footer-link:hover { color: var(--color-primary); }

      /* Form Elements */
      input, select, textarea {
        background: #F1F5F9; /* Light Gray slate-100 */
        border: 1px solid var(--color-border);
        color: var(--color-text);
        padding: 10px 16px;
        border-radius: 8px;
        font-family: inherit;
        font-size: 14px;
        width: 100%;
        outline: none;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
      }
      
      input:focus, select:focus, textarea:focus {
        background: white;
        border-color: var(--color-primary);
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
      }

      /* Focus styles for accessibility */
      a:focus-visible,
      button:focus-visible {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
      }

      /* Remove default focus outline (replaced by focus-visible) */
      a:focus:not(:focus-visible),
      button:focus:not(:focus-visible) {
        outline: none;
      }

      @media (max-width: 768px) {
        .grid-2, .grid-3 { grid-template-columns: 1fr; }
        .bg-glow { display: none; }
      }
    </style>
    <script src="https://js.stripe.com/v3" async></script>
  </head>
  <body>
    <header>
      <div>
        <a class="logo" href={localePath('/')}>
          <img src="/logo.png" alt="FastScout Logo" style="width: 32px; height: 32px;" />
          FastScout
        </a>
      </div>
      <nav aria-label="Main navigation">
        <LanguageSwitcher locale={locale} />
        <a href={localePath('/pricing')} aria-current={pathWithoutLocale === '/pricing' ? "page" : undefined}>{t.nav.pricing}</a>
        <!-- Client-side auth-aware nav links -->
        <a class="btn btn-primary" href={localePath('/auth')} data-nav="guest">{t.nav.signIn}</a>
        <a href={localePath('/dashboard')} data-nav="user" style="display:none;" aria-current={pathWithoutLocale === '/dashboard' ? "page" : undefined}>{t.nav.dashboard}</a>
      </nav>
    </header>
    <main class="container section">
      <slot />
    </main>

    <footer style="background: var(--color-bg-card); padding: 80px 0 40px; border-top: 1px solid var(--color-border);">
      <div class="container">
        <div class="grid grid-3" style="margin-bottom: 60px;">
          <!-- Brand -->
          <div>
            <a class="logo" href={localePath('/')} style="margin-bottom: 16px; display:inline-flex;">
              <img src="/logo.png" alt="FastScout Logo" style="width: 32px; height: 32px;" />
              FastScout
            </a>
            <p class="muted" style="max-width: 280px; line-height: 1.6;">
              {t.footer.tagline}<br>
              {t.footer.description}
            </p>
          </div>

          <!-- Product -->
          <div>
            <h4 style="font-weight: 700; margin-bottom: 20px; font-size: 16px;">{t.footer.product}</h4>
            <div style="display: flex; flex-direction: column; gap: 12px;">
              <a href={localePath('/pricing')} class="footer-link">{t.nav.pricing}</a>
              <a href={localePath('/dashboard')} class="footer-link">{t.nav.dashboard}</a>
              <a href={localePath('/extension')} class="footer-link">{t.footer.extension}</a>
            </div>
          </div>

          <!-- Resources -->
          <div>
            <h4 style="font-weight: 700; margin-bottom: 20px; font-size: 16px;">{t.footer.resources}</h4>
            <div style="display: flex; flex-direction: column; gap: 12px;">
              <a href={localePath('/docs')} class="footer-link">{t.footer.documentation}</a>
              <a href={localePath('/contact')} class="footer-link">{t.footer.support}</a>
              <a href={localePath('/terms')} class="footer-link">{t.footer.terms}</a>
              <a href={localePath('/privacy')} class="footer-link">{t.footer.privacy}</a>
            </div>
          </div>
        </div>

        <div style="border-top: 1px solid var(--color-border); padding-top: 32px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 16px;">
          <p class="muted" style="font-size: 14px;">&copy; {new Date().getFullYear()} FastScout. {t.footer.copyright}</p>
        </div>
      </div>
    </footer>
    <Toast locale={locale} />
    
    <script>
      // Client-side auth detection for Layout navigation
      function updateAuthUI() {
        const hasAuthCookie = document.cookie.includes('sb-');
        const hasLocalStorage = typeof localStorage !== 'undefined' && 
          Object.keys(localStorage).some(k => k.startsWith('sb-'));
        
        const isSignedIn = hasAuthCookie || hasLocalStorage;
        
        // Toggle nav links
        document.querySelectorAll('[data-nav="guest"]').forEach(el => {
          (el as HTMLElement).style.display = isSignedIn ? 'none' : '';
        });
        document.querySelectorAll('[data-nav="user"]').forEach(el => {
          (el as HTMLElement).style.display = isSignedIn ? '' : 'none';
        });
        
        // Also toggle CTA buttons (data-cta) if present on page
        document.querySelectorAll('[data-cta="guest"]').forEach(el => {
          (el as HTMLElement).style.display = isSignedIn ? 'none' : '';
        });
        document.querySelectorAll('[data-cta="user"]').forEach(el => {
          (el as HTMLElement).style.display = isSignedIn ? '' : 'none';
        });
      }
      
      // Run on load and after Astro page transitions
      document.addEventListener('DOMContentLoaded', updateAuthUI);
      document.addEventListener('astro:page-load', updateAuthUI);
    </script>
  </body>

</html>
